<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, 'data-countchar': ' ', 'data-countchar-limit': '140', placeholder: 'Максимум 140 символов' %>
    <span name=140>140</span>
  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>
 